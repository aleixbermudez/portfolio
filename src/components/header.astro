<header class="fixed w-full bg-white/70 backdrop-blur-xl z-50 border-b border-gray-200/60 transition-all duration-300">
  <nav class="max-w-6xl mx-auto px-6 py-4 flex justify-between items-center">
    <span class="text-2xl font-semibold tracking-tight text-gray-900">
      <span class="text-gray-900">aleixbermudez</span>
    </span>

    <ul class="hidden md:flex space-x-8 text-gray-700 font-medium">
      <li><a href="#projects" class="hover:text-gray-900 transition-colors duration-200">Proyectos</a></li>
      <li><a href="#skills" class="hover:text-gray-900 transition-colors duration-200">Habilidades</a></li>
      <li><a href="#trajectory" class="hover:text-gray-900 transition-colors duration-200">Trayectoria</a></li>
      <li><a href="#contact" class="hover:text-gray-900 transition-colors duration-200">Contacto</a></li>
    </ul>

    <button id="burger" class="md:hidden p-2 rounded-lg hover:bg-gray-100 transition-colors duration-200 focus:outline-none">
      <svg class="w-6 h-6 text-gray-800" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" d="M4 6h16M4 12h16M4 18h16" />
      </svg>
    </button>
  </nav>

  <div id="mobile-menu" class="hidden md:hidden bg-white/95 backdrop-blur-md border-t border-gray-200/70 shadow-lg">
    <ul class="flex flex-col space-y-4 px-6 py-6 text-gray-700 font-medium text-lg">
      <li><a href="#projects" class="hover:text-gray-900 transition">Proyectos</a></li>
      <li><a href="#skills" class="hover:text-gray-900 transition">Habilidades</a></li>
      <li><a href="#trajectory" class="hover:text-gray-900 transition">Trayectoria</a></li>
      <li><a href="#contact" class="hover:text-gray-900 transition">Contacto</a></li>
    </ul>
  </div>
</header>

<script>
  const burger = document.getElementById("burger");
  const menu = document.getElementById("mobile-menu");

  burger.addEventListener("click", () => {
    menu.classList.toggle("hidden");
    menu.classList.toggle("animate-fade-in");
  });

  menu.querySelectorAll("a").forEach(link => {
    link.addEventListener("click", () => menu.classList.add("hidden"));
  });
</script>

<style>
  @keyframes fadeIn {
    from { opacity: 0; transform: translateY(-10px); }
    to { opacity: 1; transform: translateY(0); }
  }
  .animate-fade-in {
    animation: fadeIn 0.25s ease-out forwards;
  }
</style>
