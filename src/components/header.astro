<header class="fixed w-full bg-white/70 backdrop-blur-md z-50 shadow-md">
  <nav class="max-w-6xl mx-auto px-6 py-4 flex justify-between items-center">
    <!-- Logo -->
    <h1 class="text-2xl font-bold text-indigo-600">aleixbermudez</h1>

    <!-- Menú principal -->
    <ul class="hidden md:flex space-x-6 text-gray-700 font-medium">
      <li><a href="#projects" class="hover:text-indigo-600 transition">Proyectos</a></li>
      <li><a href="#skills" class="hover:text-indigo-600 transition">Habilidades</a></li>
      <li><a href="#trajectory" class="hover:text-indigo-600 transition">Trayectoria</a></li>
      <li><a href="#contact" class="hover:text-indigo-600 transition">Contacto</a></li>
    </ul>

    <!-- Botón hamburguesa -->
    <div class="md:hidden">
      <button id="burger" class="focus:outline-none">
        <svg class="w-6 h-6 text-gray-700" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" d="M4 6h16M4 12h16M4 18h16"/>
        </svg>
      </button>
    </div>
  </nav>

  <!-- Menú móvil (oculto por defecto) -->
  <div id="mobile-menu" class="hidden md:hidden bg-white/95 backdrop-blur-md shadow-md">
    <ul class="flex flex-col space-y-4 px-6 py-4 text-gray-700 font-medium">
      <li><a href="#projects" class="hover:text-indigo-600 transition">Proyectos</a></li>
      <li><a href="#skills" class="hover:text-indigo-600 transition">Habilidades</a></li>
      <li><a href="#trajectory" class="hover:text-indigo-600 transition">Trayectoria</a></li>
      <li><a href="#contact" class="hover:text-indigo-600 transition">Contacto</a></li>
    </ul>
  </div>
</header>

<script>
  // Script para abrir/cerrar el menú móvil
  const burger = document.getElementById('burger');
  const menu = document.getElementById('mobile-menu');

  burger.addEventListener('click', () => {
    menu.classList.toggle('hidden');
    menu.classList.toggle('animate-fade-in');
  });
</script>

<style>
  /* Pequeña animación de entrada */
  @keyframes fadeIn {
    from { opacity: 0; transform: translateY(-10px); }
    to { opacity: 1; transform: translateY(0); }
  }
  .animate-fade-in {
    animation: fadeIn 0.3s ease forwards;
  }
</style>
