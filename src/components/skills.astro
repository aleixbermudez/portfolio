---
// Skills.astro
const skills = ["HTML", "CSS", "JavaScript", "TypeScript", "React", "Astro", "Tailwind", "Node.js", "Python", "Java", "SQL", "Bootstrap"];
---
<section id="skills" class="py-20 bg-gray-50">
  <div class="max-w-4xl mx-auto px-6 text-center">
    <h3 class="text-3xl font-bold text-gray-800 mb-12">Habilidades</h3>
    <div class="flex flex-wrap justify-center gap-4">
      {skills.map(skill => (
        <span class="px-4 py-2 bg-indigo-100 text-indigo-700 rounded-full font-medium">{skill}</span>
      ))}
    </div>
  </div>
</section>
