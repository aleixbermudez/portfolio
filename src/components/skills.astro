---
const skillGroups = [
  {
    category: "Frontend Architecture",
    items: ["React", "Astro", "TypeScript", "Tailwind", "Angular", "Next.js"],
    icon: "M12 2L2 7l10 5 10-5-10-5zM2 17l10 5 10-5M2 12l10 5 10-5"
  },
  {
    category: "Backend & Systems",
    items: ["Node.js", "Laravel", "Python", "Java", "SQL"],
    icon: "M4 7v10c0 1.1.9 2 2 2h12c1.1 0 2-.9 2-2V7M4 7c0-1.1.9-2 2-2h12c1.1 0 2 .9 2 2M4 7l8 5 8-5"
  },
  {
    category: "Design & Tools",
    items: ["Figma", "Git", "Docker", "Postman"],
    icon: "M11 4H4a2 2 0 00-2 2v14a2 2 0 002 2h14a2 2 0 002-2v-7M18.5 2.5a2.121 2.121 0 113 3L12 15l-4 1 1-4 9.5-9.5z"
  }
];
---

<section id="skills" class="relative py-24 md:py-32 bg-[#030303] overflow-hidden border-t border-zinc-900">
  
  <div class="absolute inset-0 opacity-[0.03] pointer-events-none" 
       style="background-image: radial-gradient(#fff 1px, transparent 1px); background-size: 40px 40px;">
  </div>

  <div class="max-w-7xl mx-auto px-6 relative z-10">
    
    <div class="mb-20 text-center md:text-left">
      <p class="text-blue-500 font-mono text-[10px] md:text-sm tracking-[0.3em] uppercase mb-4 opacity-80">Tech Stack</p>
      <h2 class="text-6xl md:text-8xl lg:text-9xl font-black tracking-tighter text-white uppercase leading-[0.8]">
        Core <br/> <span class="text-zinc-800">Skills</span>
      </h2>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-3 gap-6 md:gap-px bg-zinc-900/50 border border-zinc-900 rounded-[2rem] overflow-hidden shadow-2xl">
      {skillGroups.map((group) => (
        <div class="group relative bg-[#030303] p-8 md:p-12 transition-all duration-500 hover:bg-zinc-950">
          
          <div class="mb-8 p-3 w-fit rounded-xl bg-zinc-900 border border-zinc-800 text-zinc-500 group-hover:text-blue-500 group-hover:border-blue-500/50 transition-all duration-500">
            <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d={group.icon} />
            </svg>
          </div>

          <h3 class="text-blue-500 font-mono text-xs font-bold uppercase tracking-[0.3em] mb-10">
            {group.category}
          </h3>
          
          <div class="flex flex-wrap gap-3">
            {group.items.map((skill) => (
              <span class="px-4 py-2 text-sm md:text-base font-medium text-zinc-500 border border-zinc-900 rounded-full group-hover:border-zinc-800 group-hover:text-zinc-300 transition-all duration-300 hover:!text-white hover:!border-blue-500/50 hover:bg-blue-500/5">
                {skill}
              </span>
            ))}
          </div>

          <div class="absolute bottom-0 left-0 w-full h-1 bg-gradient-to-r from-transparent via-blue-600/50 to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-700"></div>
        </div>
      ))}
    </div>
  </div>
</section>